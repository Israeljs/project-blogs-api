{
  "openapi": "3.0.0",
  "info":{
    "title": "API de blog",
    "description": "Essa API é um trabalho académico e tem como objetivo a produção de conteúdo para um blog",
    "contact": {
      "email": "silvaij16@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://project-blogs-back.herokuapp.com/"
    }
  ],
  "paths": {
    "/user": {
      "summary": "Cadastro de usuário",
      "description": "Essa rota cadastra um novo usuário por email",
      "tags": ["User"],
      "requestBody": {
        "content": {
          "application/json": {
            "schema":{
              "$ref": "#/components/schemas/User"
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }       
        }
      }
    }
  }
}